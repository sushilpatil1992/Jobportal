<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/Mobile/css", "~/Content/jquerymobile/css")
        @Scripts.Render("~/bundles/jquery", "~/bundles/jquerymobile")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")


        
    </head> 

<body> 

    <div data-role="page" data-theme="a">
         
        <div data-role="content">
            @RenderSection("featured", false)
            @RenderBody()	
            <div data-role="header" data-position="fixed" >
                <nav data-role="navbar">
                    <ul>
                        @if(!Request.IsAuthenticated)
                        { 
                        <li> @Html.ActionLink("Jobs", "SearchJob", "Home")</li>
                        <li> @Html.ActionLink("Home", "Index", "Home")</li>
                        }
                        @if (User.IsInRole("Employee"))
                        {
                            <li> @Html.ActionLink("Home", "Index", "Home")</li>
                            <li> @Html.ActionLink("Profile", "EmployeeProfile", "Jobposts")</li>
                            <li><a href="@Url.Action("Index","Jobposts")" class="ui-btn ui-btn-plus ui-btn-icon-left ui-btn-inline">Post Job</a></li>
                            
                        }
                        @if (User.IsInRole("Jobseeker"))
                        {
                            <li> @Html.ActionLink("Home", "Index", "Home")</li>
                            <li> @Html.ActionLink("Profile", "Index", "profile")</li>                            
                            <li>@Html.ActionLink("Logoff", "Manage", "Account")</li>
                        }
                    </ul>
                </nav>
            </div>	
        </div>
        </div>
    

</body>

</html>
