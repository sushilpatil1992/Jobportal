@model AspNetGroupBasedPermissions.Models.Notification

@{
    ViewBag.Title = "SendMessage";
}

<h2>SendMessage</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Notification</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="form-group">
            @Html.Label("TO:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <b>@Html.ViewBag.Name</b>
                @Html.HiddenFor(model => model.to, new { @Value = ViewBag.To})
                
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Notificaion, new { @class = "form-control", @cols = "100", @rows = "15" })
                @Html.ValidationMessageFor(model => model.Notificaion, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
                <a href="@Url.Action("Index")"class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
}


